<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<style>
    body {
      height: 90vh;
      width: 90%;
      background-image: url('img/site-images/loginbackground.jpeg');
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-size: cover;
    }

    .centered {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border: solid;
        backdrop-filter: contrast(8%);
        border-radius: 25px;
        padding: 2%;
    }

    .img-overlay-wrap svg {
        position: absolute;
        top: 0;
        left: 0;
    }

    .svg-container {
        transform: rotate(-10deg);
        
    }

    .svg-size {
        width: 55%;
        height: 60%;
        margin: -10% 0 0 -2%;
        animation-name: animate;
        animation-duration: 0.8s;
        animation-iteration-count: infinite;
        animation-direction: alternate;
    }
    .sign-up-color{
      background-color: #2F3061;
      color: white;
    }
    #form-font-change{
      font-family: 'Exo 2', sans-serif;
      font-size: 15px; 
      color: black;
    }
    @keyframes animate {
      0% {
        filter:
        drop-shadow(
          0px 0px 1px rgb(248, 235, 118)
          
        )
        
      }
    }



    </style>
<div class="svg-container img-overlay-wrap">

    <img class = "svg-size" src="img/site-images/Beginners-Luck.svg">
    
</div>

<div class="row centered" id="form-font-change">
    <div class="col-md-6">
      <h2>LOGIN</h2>
  
      <form class="form login-form">
        <div class="form-group">
          <input class="form-input" type="text" id="email-login" value="Email"/>
        </div>
        <div class="form-group">
          <input class="form-input" type="text" id="username-login" value="Username"/>
        </div>
        <div class="form-group">
          <input class="form-input" type="password" id="password-login" value="password"/>
        </div>
        <div class="form-group">
          <button class="btn sign-up-color" type="submit">LOGIN</button>
        </div>
      </form>
    </div>
    <div class="col-md-6">
      <h2>SIGN UP</h2>
  
      <form class="form signup-form">
        <div class="form-group">
          <input class="form-input" type="text" id="name-signup" value="Name"/>
        </div>
        <div class="form-group">
          <input class="form-input" type="text" id="email-signup" value="Email"/>
        </div>
        <div class="form-group">
          <input class="form-input" type="text" id="username-signup" value="Username"/>
        </div>
        <div class="form-group">
          <input class="form-input" type="password" id="password-signup" value="password"/>
        </div>
        <div class="form-group">
          <button class="btn sign-up-color" type="submit">SIGN UP</button>
        </div>
      </form>
    </div>
  </div>
  
  <script src="./js/login.js"></script>